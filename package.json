{
  "name": "transfer-frontend",
  "version": "1.0.0",
  "description": "'Frontend for QR Code Transfer'",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.prod.js",
    "dev": "webpack-dev-server --open --config ./webpack.config.dev.js",
    "start": "npx serve ./dist -s",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Transfer-team/QRCodeTransfer.git"
  },
  "keywords": [
    "React",
    "QR"
  ],
  "author": "Xavier Garcia <xaviergn60@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Transfer-team/QRCodeTransfer/issues"
  },
  "homepage": "https://github.com/Transfer-team/QRCodeTransfer#readme",
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-react": "^7.12.13",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^5.0.2",
    "dotenv-webpack": "^6.0.2",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "jsdom": "^16.4.0",
    "mini-css-extract-plugin": "^1.3.8",
    "node-sass": "^5.0.0",
    "sass-loader": "^11.0.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.24.1",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>./setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/./src/__mocks__/fileMock.js"
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      ".test.(js)$/",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared",
      "masonry-layout"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm test"
    }
  }
}
